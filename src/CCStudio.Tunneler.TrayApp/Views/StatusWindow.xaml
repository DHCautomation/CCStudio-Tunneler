<Window x:Class="CCStudio.Tunneler.TrayApp.Views.StatusWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="CCStudio-Tunneler Status"
        Height="600"
        Width="800"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Service Status" FontSize="24" FontWeight="Bold" Foreground="{StaticResource PrimaryBrush}"/>
            <TextBlock Text="Real-time monitoring of the tunneler service" FontSize="14" Foreground="Gray"/>
        </StackPanel>

        <!-- Status Cards -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Service State Card -->
                <materialDesign:Card Margin="0,0,0,15" Padding="20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Service State" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
                            <TextBlock Name="TxtServiceState" Text="Running" FontSize="32" FontWeight="Bold" Foreground="Green"/>
                            <TextBlock Name="TxtUptime" Text="Uptime: 2h 15m 30s" FontSize="14" Foreground="Gray" Margin="0,5,0,0"/>
                        </StackPanel>

                        <materialDesign:PackIcon Grid.Column="1" Kind="CheckCircle" Width="64" Height="64" Foreground="Green"/>
                    </Grid>
                </materialDesign:Card>

                <!-- Connection Status Card -->
                <materialDesign:Card Margin="0,0,0,15" Padding="20">
                    <StackPanel>
                        <TextBlock Text="Connection Status" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>

                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="OPC DA Client:" FontWeight="Bold"/>
                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <Ellipse Name="DaStatusIndicator" Width="12" Height="12" Fill="Green" Margin="0,0,8,0"/>
                                <TextBlock Name="TxtDaStatus" Text="Connected"/>
                            </StackPanel>
                        </Grid>

                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="OPC UA Server:" FontWeight="Bold"/>
                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <Ellipse Name="UaStatusIndicator" Width="12" Height="12" Fill="Green" Margin="0,0,8,0"/>
                                <TextBlock Name="TxtUaStatus" Text="Running"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Statistics Card -->
                <materialDesign:Card Margin="0,0,0,15" Padding="20">
                    <StackPanel>
                        <TextBlock Text="Statistics" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>

                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Active Tags:" FontWeight="Bold"/>
                            <TextBlock Grid.Column="1" Name="TxtActiveTag" Text="0"/>
                        </Grid>

                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Connected Clients:" FontWeight="Bold"/>
                            <TextBlock Grid.Column="1" Name="TxtConnectedClients" Text="0"/>
                        </Grid>

                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Messages Processed:" FontWeight="Bold"/>
                            <TextBlock Grid.Column="1" Name="TxtMessagesProcessed" Text="0"/>
                        </Grid>

                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Messages/Second:" FontWeight="Bold"/>
                            <TextBlock Grid.Column="1" Name="TxtMessagesPerSecond" Text="0.0"/>
                        </Grid>

                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Error Count:" FontWeight="Bold"/>
                            <TextBlock Grid.Column="1" Name="TxtErrorCount" Text="0"/>
                        </Grid>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Last Error Card (if any) -->
                <materialDesign:Card Name="CardLastError" Margin="0,0,0,15" Padding="20" Visibility="Collapsed">
                    <StackPanel>
                        <TextBlock Text="Last Error" FontSize="18" FontWeight="Bold" Foreground="Red" Margin="0,0,0,10"/>
                        <TextBlock Name="TxtLastError" TextWrapping="Wrap" Foreground="Red"/>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Last Update -->
                <TextBlock Name="TxtLastUpdate" Text="Last updated: Never" FontSize="12" Foreground="Gray" Margin="0,10,0,0"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Refresh" Width="100" Height="40" Margin="0,0,10,0"
                    Click="OnRefresh"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Background="{StaticResource PrimaryBrush}"/>
            <Button Content="Close" Width="100" Height="40"
                    Click="OnClose"
                    Style="{StaticResource MaterialDesignOutlinedButton}"/>
        </StackPanel>
    </Grid>
</Window>
