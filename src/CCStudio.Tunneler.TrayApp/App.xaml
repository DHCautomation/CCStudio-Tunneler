<Application x:Class="CCStudio.Tunneler.TrayApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:tb="http://www.hardcodet.net/taskbar"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:converters="clr-namespace:CCStudio.Tunneler.TrayApp.Converters"
             StartupUri="MainWindow.xaml"
             ShutdownMode="OnExplicitShutdown">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Material Design -->
                <materialDesign:BundledTheme BaseTheme="Light" PrimaryColor="Green" SecondaryColor="Lime" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Defaults.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Converters -->
            <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>

            <!-- Colors matching the logo -->
            <SolidColorBrush x:Key="PrimaryBrush" Color="#7AB841"/>
            <SolidColorBrush x:Key="SecondaryBrush" Color="#5A9031"/>
            <SolidColorBrush x:Key="AccentBrush" Color="#A0D468"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
